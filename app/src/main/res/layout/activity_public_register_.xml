<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Public_register_Activity">
    <RelativeLayout
        android:id="@+id/chooseLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="92dp"
        android:textSize="18sp"
        android:text="استان خود را انتخاب کنید:"
        android:textColor="#545050"
        android:paddingRight="20dp"
        android:textStyle="bold"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="214dp"
            android:layout_marginRight="0dp"
            android:paddingRight="20dp"
            android:text="شهر خود را وارد کنید:"
            android:textColor="#545050"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
        android:id="@+id/city"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbordershadow"
        android:layout_marginTop="300dp"
        android:clickable="true"
        android:text="تایید"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:shadowColor="@color/colorPrimaryDark"
        />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/what_to_do"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="92dp"
        android:textSize="18sp"
        android:text="قصد انجام چه عملیاتی را دارید؟"
        android:textColor="#000000"
        android:paddingRight="20dp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/new_sans"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="187dp"
        android:background="@drawable/buttonbordershadow"
        android:clickable="true"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="ایجاد سانس جدید"
        android:textColor="@android:color/white"
        android:textSize="20sp"
         />

    <Button
        android:id="@+id/visist_sans"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="253dp"
        android:background="@drawable/buttonbordershadow"
        android:clickable="true"
        android:shadowColor="@color/colorPrimaryDark"
        android:text="مشاهده ی سانس های موجود"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />
</RelativeLayout>
</RelativeLayout>